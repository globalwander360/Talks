checkForCustomerCurrency$(form: FormGroup): Observable<boolean> {
  const customerAccount: string = form.get('customer.accountNumber')?.value?.accountNum;
  const customerCurrency: string = customerAccount?.slice(-3);
  const currency: string = form.get('event.currency')?.value?.initialCurrency;

  if (
    !customerAccount ||
    customerAccount === defaultCustomerAccountOption.accountNum ||
    customerCurrency !== currency
  ) {
    return new Observable<boolean>((observer) => {
      this.confirmationService.confirm({
        key: 'currency-mismatch-warning',
        message: !customerAccount || customerAccount === defaultCustomerAccountOption.accountNum
          ? "The Customer Account has not been selected. Continue?"
          : "The currency of the Customer Account selected is not same than the Currency of the Event. Continue?",
        header: "Confirmation",
        accept: () => {
          observer.next(true);
          observer.complete();
        },
        reject: () => {
          observer.next(false);
          observer.complete();
        }
      });
    });
  }

  return of(true);
}
