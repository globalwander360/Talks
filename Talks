else {
    Page<RequestEntity> requestEntityPage = repository.findAll(specification, pageRequest);
    List<CxtProdCode> cxtProdCodeList = referentialutil.getCxtProdCode(bnppuid);

    RequestListsPage mappedPage = DpwDTOConverter.convertToResourcePage(
            requestEntityPage,
            RequestListsPage.class,
            Request.class,
            customQueueCount
    );

    mappedPage.getResults().forEach(request -> {
        String prodCode = request.getExternalTrackAndTraceEntity() != null
                ? request.getExternalTrackAndTraceEntity().getProdCode()
                : null;

        if (prodCode != null) {
            String prodCodeName = cxtProdCodeList.stream()
                    .filter(c -> prodCode.equals(c.getProdCode()))
                    .map(CxtProdCode::getProdCodeName)
                    .findFirst()
                    .orElse(null);
            request.setProdCode(prodCodeName);
        } else {
            request.setProdCode(null);
        }
    });

    requestListsPage = mappedPage;
}
